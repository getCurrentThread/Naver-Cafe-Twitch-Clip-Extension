{
    "manifest_version": 3,
    "name": "네이버 카페 트위치 클립 익스텐션(NCTC Extension)",
    "description": "네이버 카페에서 트위치 클립 링크를 비디오로 볼 수 있습니다.",
    "homepage_url": "https://github.com/getCurrentThread/Naver-Cafe-Twitch-Clip-Extension",
    "version": "0.1.1.1",
    "author": "getCurrentThread",
    "action": {
      "default_icon": "images/thumbnail.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "images/thumbnail.png",
      "48": "images/thumbnail.png",
      "128": "images/thumbnail.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage"
    ],
    "web_accessible_resources":[
      {
        "matches": ["<all_urls>"],
        "resources": [
          "lib/jquery-3.6.0.min.js",
          "lib/bootstrap.min.css",
          "utils.js",
          "popup.html",
          "popup.js",
          "settings.html",
          "settings.js"
        ]
      }
    ],
    "content_scripts": [
      {
        "matches": [
          "https://cafe.naver.com/*"
        ],
        "css": ["top.css"],
        "js": [
          "lib/jquery-3.6.0.min.js",
          "lib/arrive.min.js",
          "utils.js",
          "top.js"
        ],
        "run_at": "document_idle"
      },
      {
        "matches": [
          "https://cafe.naver.com/MyCafeIntro.nhn*",
          "https://cafe.naver.com/ArticleRead.nhn*"
        ],
        "all_frames": true,
        "css": ["main.css"],
        "js": [
          "lib/jquery-3.6.0.min.js",
          "lib/arrive.min.js",
          "utils.js",
          "main.js"
        ]
      },
      {
        "matches": [
          "https://clips.twitch.tv/embed*"
        ],
        "all_frames": true,
        "css": ["embed.css"],
        "js": [
          "lib/jquery-3.6.0.min.js",
          "lib/arrive.min.js",
          "utils.js",
          "embed.js"
        ]
      }
    ]
  }
  